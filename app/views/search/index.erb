<html>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="search-h1"> 
          <%= params[:user] %>'s
        </div>
        <div class="search-h2">
          <%= params[:repo] %>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-md-offset-3 col-md-2 image_container">
        <%= image_tag((getLanguageURL @repo.lang), class: "img-responsive") %>
      </div>
      <div class="col-md-2">
        <p><%= raw(buildStars @repo.stars) %></p>
      </div>
      <div class="col-md-2">
        <h3><%= @repo.growth_rate.round(2) %> stars per day</h3>
      </div>
    </div>
    <hr width="70%" style="border-top: 2px solid gray">

    <div class="row">
      <div class="col-md-offset-3 col-md-2 ">
        <h4> Other language data:</h4>
        <% @repo.languages.each do |language,bytes| %>
            <p><%= language %>: <%= bytes %> bytes.</p>
        <% end %>
      </div>
      <div class="col-md-2">
        <h4>Birthday</h4>
        <p>Repo Created: <%= @repo.created %></p>
        <p>Repo Age: <%= age(@repo).round %> days</p>
      </div>
      <div class="col-md-2 ">
        <p><%= raw(buildReadme @repo.readme) %></p>
        
      </div>
    </div>
    <div class="chart">
        <% legend = {"position" => "top", "maxLines" => 5 } %>
        <%= pie_chart @repo.languages.each, library: {backgroundColor:"#ECF0F1", legend: legend, width: "100%"} %>    
    </div>


    <h4>Contribution Statistics</h4>
    <p>Percentage of pull requests merged: <%= @repo.pulls_merged %></p>
    <p>Ratio of pull requests to issues: <%= @repo.pulls_to_issues %></p>

	<h4>Contributors</h4>
	<p><%= @repo.contributors %></p>
	
    <%= @repo.popularity %>
	
    <div class="text-center">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-large">
          <%= link_to 'Return to Homepage', '/' %>
        </button>
        <button type="button" class="btn btn-default btn-large">
          <%= link_to 'Pull new data from database', '#' %>
        </button>
      </div>
    </div>
</html>
